model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  contacts     Contact[]
  organizations Organization[]

  @@map("users")
}

model Organization {
  id        String    @id @default(uuid())
  name      String
  email     String?
  phone     String?
  address   String?
  website   String?
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  contacts  Contact[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("organizations")
}

model Contact {
  id             String        @id @default(uuid())
  firstName      String
  lastName       String
  email          String        @unique
  phone          String?
  userId         String
  user           User          @relation(fields: [userId], references: [id])
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("contacts")
}